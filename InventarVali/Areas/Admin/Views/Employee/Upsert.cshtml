    @model EmployeesVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Add Bootstrap 5 CDN for modern styling -->
</head>



<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-header bg-black text-white">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h2 class=" text-white py-2">@(Model.Id != 0 ? "Update " : "Create ") Employee  <i class="bi bi-person-fill"></i></h2>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" class="row">
                            <input asp-for="@Model.Id" hidden />
                            <div class="row">
                                <div class="col-12">
                                    <div class="border p-3">
                                        @* <div asp-validation-summary="ModelOnly"></div> *@
                                        <div class="form-group mb-3">
                                            <label asp-for="@Model.FirstName" class="ms-2">Enter First Name Here</label>
                                            <input asp-for="@Model.FirstName" class="form-control border-0 shadow" placeholder="John">
                                            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="@Model.LastName" class="ms-2">Enter Your Last Name Here</label>
                                            <input asp-for="@Model.LastName" class="form-control border-0 shadow" placeholder="Doe">
                                            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="@Model.Email" class="ms-2">Enter your Email Address Here</label>
                                            <input asp-for="@Model.Email" class="form-control border-0 shadow" placeholder="JohnDoe@email.com">
                                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                        </div>
                                     <div class="row pt-2">
                                         <div class="col-6">
                                                @if (Model.Id != 0)
                                                {
                                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                                }

                                         </div>
                                        <div class="col-6">
                                            
                                                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary border form-control">
                                                    Back to List
                                                </a>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>




@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
