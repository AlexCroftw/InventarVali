@model List<Autovehicule>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Autovehicule List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
    </div>
    <div class="row pb-3">
       <div class="col-12 text-center">
            <a asp-controller="Autovehicule" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Autovehicule
            </a>
       </div>
    </div>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Type
                </th>
                <th>
                    License Plate
                </th>
                <th>
                    ITP
                </th>
                <th>
                    ITP Expiration Date
                </th>
                <th>
                    Insurence Start Date
                </th>
                <th>
                    Insurance Expiration Date
                </th>
                <th>
                    VIN Number
                </th>
                <th>
                    Vinieta
                </th>
                <th>
                    Vinieta Expiration Date
                </th>
                <th>
                    Image
                </th>
                <th>
                    Employee
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Type
                    </td>   
                    <td>    
                        @obj.LicensePlate
                    </td>   
                    <td>    
                        @obj.HasITP
                    </td>   
                    <td>    
                        @obj.ITPExpirationDate
                    </td>   
                    <td>    
                        @obj.InsurenceDate
                    </td>   
                    <td>    
                        @obj.InsuranceExpirationDate
                    </td>   
                    <td>    
                        @obj.VinNumber
                    </td>   
                    <td>    
                        @obj.HasVinieta
                    </td>   
                    <td>    
                        @obj.VinietaExpirationDate
                    </td>   
                    <td>    
                        @obj.ImageUrl
                    </td>
                    <td>
                        @obj.Employees.FullName
                    </td>
                    <td >
                       
                        <div class="w-15 btn-group text-center" role="group">
                            <a asp-controller="Autovehicule" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Autovehicule" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>