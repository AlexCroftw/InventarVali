@model Autovehicule

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Autovehicule</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Type" disabled class="form-control border-0 shadow"></input>
                    <label asp-for="Type" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="LicensePlate" disabled class="form-control border-0 shadow"></input>
                    <label asp-for="LicensePlate" class="ms-2"></label>
                </div>
                <div class="py-2 col-12">
                    <input disabled data-val="true"
                           data-val-required="The HasITP field is required."
                           id="HasITP"
                           name="HasITP"
                           type="checkbox"
                           value="true" />
                    <label asp-for="HasITP" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="VinNumber" disabled class="form-control border-0 shadow"></input>
                    <label asp-for="VinNumber" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="InsurenceDate" disabled class="form-control border-0 shadow"></input>
                    <label asp-for="InsurenceDate" class="ms-2"></label>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Autovehicule" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
