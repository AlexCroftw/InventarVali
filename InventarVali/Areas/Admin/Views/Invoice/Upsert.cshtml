@model InvoiceVM


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
</head>

<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg">
                    <div class="card-header text-center bg-black text-white">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update " : "Create ") Invoice  <i class="bi bi-car-front-fill"></i></h2>
                            </div>
                        </div>
                    </div>
                    <h2 class="text-center text-dark"> Please make sure that all the @(Model.Id != 0 ? "Changes are " : "Information is ") correct before saving</h2>
                    <div class="card-body">
                        <form method="post" class="row" enctype="multipart/form-data">
                            <input asp-for="@Model.Id" hidden />
                            <input asp-for="@Model.InvoiceUrl" hidden />
                            <div class="row">
                                <div class="col-12">
                                    <div class="border p-3">
                                        @* <div asp-validation-summary="ModelOnly"></div> *@
                                        <div class="form-group mb-3">
                                            <label asp-for="InvoiceNumber" class="ms-2">Enter Insurence No </label>
                                            <input asp-for="InvoiceNumber" class="form-control border-0 shadow" placeholder="ex: xxx/xxxxxxxxxxxxxs">
                                            <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            <label asp-for="DisplayInvoiceDate" class="ms-2"> Enter the Date the Insurence was issued</label>
                                            <input asp-for="InvoiceDate" class="form-control border-0 shadow">
                                            <input asp-for="DisplayInvoiceDate" hidden class="form-control border-0 shadow">
                                            <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                                        </div>

                                        <div class="form-group mb-3">
                                            <label asp-for="TotalPrice" class="ms-2">Enter The Total Cost of the Invoice</label>
                                            <input asp-for="TotalPrice" class="form-control border-0 shadow" placeholder="ex:7000">
                                            <span asp-validation-for="TotalPrice" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="form-group mb-3">
                                            Only .pdf
                                            <label asp-for="@Model.InvoiceUrl" class="ms-2"></label>
                                            <input type="file" name="file" class="form-control border-0 shadow">
                                        </div>
                                        <div class="row pt-2">
                                            <div class="col-6">
                                                @if (Model.Id != 0)
                                                {
                                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                                }

                                            </div>
                                            <div class="col-6">

                                                <a asp-controller="Invoice" asp-action="Index" class="btn btn-outline-primary border form-control">
                                                    Back to List
                                                </a>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>


@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
   
}
