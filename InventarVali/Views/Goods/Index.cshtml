@model List<Goods>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">Goods List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
    </div>
    <div class="row pb-3">
        <div class="col-12">
        </div>
        <div class="text-center">
            <a asp-controller="Goods" asp-action="CreateGoods" class="btn btn-primary">
                <i class="bi bi-plus-square-fill"></i> Create New Goods
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Goods Type
                </th>
                <th>
                    Model
                </th>
                <th>
                    Available
                </th>
                <th>
                    Image
                </th>
                <th>
                    Employee
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Type
                    </td>
                    <td>
                        @obj.IsTaken
                    </td>
                    <td>
                        @obj.ImageUrl
                    </td>
                    <td>

                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Goods" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Goods" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
    </div>
